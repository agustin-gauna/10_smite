---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/dice_logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>SMITE 2 | RANDOMIZER</title>
    <meta
      name="description"
      content="Randomiza tus partidas de SMITE 2 con nuestro generador aleatorio. ¡Encuentra nuevas formas de jugar y diviértete!"
    />
    <meta
      name="keywords"
      content="SMITE 2, randomizer, generador aleatorio, SMITE, juegos, MOBA"
    />
  </head>
  <body class="bg-tertiary flex flex-col font-primary gap-20">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
